/* pages/myinformation/myinformation.wxss */

.tp {
  height: 50rpx;
  margin: 20rpx;
  font-size: 15px;
  display: flex;
}

.title {
  height: 200rpx;
  line-height: 200rpx;
  display: flex;
  font-size: 30px;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.top {
  width: 250rpx;
  height: 250rpx;
  margin: 0 auto;
}

.nickname {
  margin-bottom: 10rpx;
  text-align: center;
}

.left {
  display: flex;
  justify-content: flex-start;
  flex-grow: 1;
}

.right {
  display: flex;
  justify-content: flex-end;
  flex-grow: 1;
  color: rgba(204, 204, 204, 0.938);
}

.divLine {
  background: #e0e3da;
  width: 100%;
  height: 5rpx;
}
