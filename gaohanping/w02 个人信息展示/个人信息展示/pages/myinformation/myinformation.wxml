<!--pages/myinformation/myinformation.wxml-->
<view class='content'>
  <view class='top'>
    <open-data type="userAvatarUrl"></open-data>
  </view>
  <view class='nickname'>
    <open-data type="userNickName"></open-data>
  </view>

  <view class="title">
    <text>个人信息</text>
  </view>
  <view class="divLine"></view>

  <view class="divLine"></view>

  <view class='tp'>
    <text class='left'>学校：</text>
    <text class='right'>{{school}}</text>
  </view>
  <view class="divLine"></view>

  <view class='tp'>
    <text class='left'>院系：</text>
    <text class='right'>{{departmentname}}</text>
  </view>
  <view class="divLine"></view>

  <view class='tp'>
    <text class='left'>班级：</text>
    <text class='right'>{{classname}}</text>
  </view>
  <view class="divLine"></view>

  <view class='tp'>
    <text class='left'>姓名：</text>
    <text class='right'>{{name}}</text>
  </view>
  <view class="divLine"></view>

  <view class='tp'>
    <text class='left'>学号：</text>
    <text class='right'>{{number}}</text>
  </view>
  <view class="divLine"></view>

  <view class='tp'>
    <text class='left'>联系方式：</text>
    <text class='right'>{{phone}}</text>
  </view>
  <view class="divLine"></view>

  <view class='tp' bindtap='setemail'>
    <text class='left'>邮箱：</text>
    <text class='right'>{{email}}</text>
  </view>
  <view class="divLine"></view>

</view>