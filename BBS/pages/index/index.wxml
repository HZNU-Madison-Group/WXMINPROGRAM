<!--index.wxml-->
<view class="container">
  <view class="login-icon">
    <image class="login-img" src="../image/loginLog.jpg"></image>
  </view>
  <view class="login-from">
 
    <!--账号-->
    <view class="inputView">
      <image class="nameImage" src="../image/name.png"></image>
      <label class="loginLab">账号</label>
      <input class="inputText" placeholder="请输入账号" bindinput="bindusername" />
    </view>
    <view class="line"></view>
 
    <!--密码-->
    <view class="inputView">
      <image class="keyImage" src="../image/key.png"></image>
      <label class="loginLab">密码</label>
      <input class="inputText" password="true" placeholder="请输入密码" bindinput="bindpassword" />
    </view>
    <!--按钮-->
    <button class="loginBtn" type="primary"  bindtap="zhucebutton">注册</button>
    <button class="loginBtn" type="primary"  bindtap="denglubutton">已有账号去登录</button>
  
  </view>
</view>

